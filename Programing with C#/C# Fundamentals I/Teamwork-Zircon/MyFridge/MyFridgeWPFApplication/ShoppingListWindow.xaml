<Window x:Class="MyFridgeWPFApplication.ShoppingListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Shopping List" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ScrollViewer
            Grid.ColumnSpan="2">
        <TextBlock
            Grid.ColumnSpan="2"
            Name="ToBuyList"
            Background="LightYellow">
        </TextBlock>
        </ScrollViewer>
        <Button
            Grid.Column="0"
            Grid.Row="1"
            Background="LightSalmon"
            Click="OnCancelButtonClick">Cancel
        </Button>
        <Button
            Grid.Column="1"
            Grid.Row="1"
            Background="GreenYellow"
            Click="OnPrintButtonClick">Print
        </Button>
    </Grid>
</Window>
